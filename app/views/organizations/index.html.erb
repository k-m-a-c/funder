<% content_for :title, "Organizations" %>
<div class="container">
  <div id="sorting">
    <%= button_to sort_orgs_most_to_least_funding_path, method: :get, class: "mdl-button mdl-js-button mdl-js-ripple-effect", id: "sort" do %>
      <p>Sort by most to least funding</p>
      <i id="sort-most-to-least" class="material-icons">filter_list</i>
    <% end %>
  </div>
  <div class="cards">
    <%= render partial: 'organization', locals: {organizations: @organizations} %>
  </div>
  <p class="pagination">
    <%= link_to_next_page(@organizations, 'Next Page', :remote => true) %>
  </p>
  <div class="mdl-spinner mdl-js-spinner spinner"></div>
</div>