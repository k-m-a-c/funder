<% content_for :title, "Organizations" %>
<div class="container">
  <div class="cards">
  <%= paginate @organizations %>
  <% @organizations.each do |org| %>
    <div class="card">
      <div class="card-image">

      </div>
      <div class="card-header">
        <%= org.name %>
      </div>
      <div class="card-copy">
        <p><strong>Funding:</strong> <%= number_to_currency(org.funding) %></p>
      </div>
    </div>
  <% end %>
  <%= paginate @organizations %>
  </div>
</div>